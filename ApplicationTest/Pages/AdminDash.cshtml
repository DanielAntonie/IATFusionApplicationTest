@page
@model ApplicationTest.Pages.AdminDashModel
@{
}

<style>
    .container {
        width: 900px;
        margin: 20px auto;
    }

    h3 {
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th,
    td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f0f0f0;
    }

    .action-buttons button {
        margin-right: 5px;
    }
</style>

<div class="container">
    <h3>Admin Dashboard - All Users</h3>

    <div class="logout-button">
        <form method="post" asp-page-handler="Logout" id="logoutForm">
            <button type="button" onclick="confirmLogout()">Logout</button>
        </form>
    </div>

    <script>
        function confirmLogout()
        {
            if (confirm("Are you sure you want to log out?"))
            {
                document.getElementById("logoutForm").submit();
            }
        }
    </script>

@if (Model.Users != null && Model.Users.Tables[0].Rows.Count > 0)
{
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Users.Tables[0].Rows.Count; i++)
                {
                    var row = Model.Users.Tables[0].Rows[i];
                    <tr>
                        <form method="post">
                            <td>
                                @row["Id"]
                                <input type="hidden" name="id" value="@row["Id"]" />
                            </td>
                            <td>
                                <input type="text" name="username" value="@row["Username"]" />
                            </td>
                            <td>
                                <input type="email" name="email" value="@row["Email"]" />
                            </td>
                            <td class="action-buttons">
                                <button type="submit" formaction="?handler=Save">Save</button>
                                <button type="submit" formaction="?handler=Delete"
                                    onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                <button type="submit" formaction="?handler=ViewCourses" name="userId" value="@row["Id"]">View
                                    Courses</button>
                            </td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
}
else
{
        <p>No users found.</p>
}


@if (Model.UserCourses != null && Model.UserCourses.Tables[0].Rows.Count > 0)
{
        <div class="container">
            <h3>Selected User's Courses</h3>
            <table>
                <thead>
                    <tr>
                        <th>Course Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow course in Model.UserCourses.Tables[0].Rows)
                    {
                        <tr>
                            <td>@course["Name"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
}

@if (Model.AllSignups != null && Model.AllSignups.Tables[0].Rows.Count > 0)
{
        <div class="container">
            <h3>All Course Signups</h3>
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Course Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow signup in Model.AllSignups.Tables[0].Rows)
                    {
                        <tr>
                            <td>@signup["Username"]</td>
                            <td>@signup["Name"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
}
